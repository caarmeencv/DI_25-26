package com.jdojo.intro;

import java.util.Random;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class AdivinhaONumero extends Application {
	
	private int aleatorio = new Random().nextInt(100 - 0 + 1) + 0;
	
	public static void main(String[] args) {
		Application.launch(args);
	}
	
	@Override
	public void start(Stage stage) throws Exception {
		
		VBox root = new VBox(10);
		
		//o enunciado do xogo
		Label lblEnunciado = new Label("Intenta adiviñar o número secreto");
		//o mensaje dependendo do boton marcado
		Label msg = new Label();
		//desvelamos o resultado porque se rindeu
		Label lblRendirse = new Label("O numero secreto era: " + aleatorio);
		//desvelamos o resultado porque gañou
		Label lblGanar = new Label("Correcto, o numero e: " + aleatorio);
		
		//o numero e mais baixo
		Label lblBaixo = new Label("O número é mais baixo");
		//onde imos poñer o numero
		TextField fld = new TextField();
		//os botons que aparecen
		Button btnProba = new Button ("Proba");
		Button btnReiniciar = new Button ("Reiniciar Xogo");
		Button btnRendirse = new Button ("Rendirse");
		
		//accion do boton de probar
		btnProba.setOnAction(e -> {
			String numero = fld.getText();
			 if(aleatorio > numero) {
				 msg.setText("O número é mais alto");
			 }
	        });
		
		root.getChildren().addAll(lblEnunciado, fld, btnProba, btnReiniciar, btnRendirse, msg);

		Scene scene = new Scene(root, 300, 300);
		stage.setScene(scene);
		stage.setTitle("Adiviña o numero");
		stage.show();

	}


}