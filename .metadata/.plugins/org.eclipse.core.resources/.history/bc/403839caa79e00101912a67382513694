package com.jdojo.intro;

import java.util.Random;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.Background;
import javafx.scene.layout.BackgroundFill;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import javafx.scene.paint.Color;
import javafx.stage.Stage;

public class CambiarTamanhoXanela extends Application {

	public static void main(String[] args) {
		Application.launch(args);
	}

	@Override
	public void start(Stage stage) throws Exception {

		VBox root = new VBox();
		
		HBox primero = new HBox();
		HBox segundo = new HBox();

		// o enunciado do xogo
		Label ancho = new Label("Novo ancho");
		Label altura = new Label("Nova altura");
		//as dimensions da nova xanela
		TextField fldancho = new TextField();
		TextField fldaltura = new TextField();
		//poñemos o prompt dos fields
		fldancho.setPromptText("Introduce o novo ancho");
		fldaltura.setPromptText("Introduce a nova altura");
		
		root.getChildren().addAll(primero, segundo);
		primero.getChildren().addAll(ancho, fldancho);
		segundo.getChildren().addAll(altura, fldaltura);

		Scene scene = new Scene(root, 300, 200);
		stage.setScene(scene);
		stage.setTitle("Adiviña o numero");
		stage.show();

	}

}